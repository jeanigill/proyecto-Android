<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.MenuPrincipalActivity">



    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="119dp"
        android:layout_height="121dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="21dp"
        android:src="@mipmap/ic_icono_materiaa_foreground" />

    <EditText
        android:id="@+id/id_bitacora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Id de la bitacora"
        android:inputType="text" />
    <EditText
        android:id="@+id/anho_bitacora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_bitacora"
        android:hint="AÃ±o de la bitacora"
        android:inputType="text" />
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/anho_bitacora"
        android:onClick="crearBitacora"
        android:text="@string/new_materia" />


</RelativeLayout>