<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/crear_cuenta_titulo2"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginBottom="20dp"
        android:background="@color/verde_200"
        android:gravity="center"
        android:text="CREAR NUEVO"
        android:textSize="24dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="543dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dp"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:src="@drawable/ic_content_paste_black_18dp"
            android:onClick="lanzarVistaVerItem"
            />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:src="@drawable/ic_dashboard_black_24dp"
            android:onClick="lanzarVistaAddEjercicio"
            />


        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:src="@drawable/ic_format_list_numbered_black_18dp"
            android:onClick="lanzarVistaAddInvestigacion"/>

    </LinearLayout>
</RelativeLayout>